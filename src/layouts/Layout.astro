---
import { ClientRouter } from 'astro:transitions';
---

<!doctype html>
<html lang="en">
	<head>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Onest:wght@100..900&display=swap"
			rel="stylesheet"
		/>
		<ClientRouter />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Portal now</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	details[open] span#arrow {
		transform: rotate(90deg);
	}
	* {
		font-family: 'Onest', serif;
		font-optical-sizing: auto;
		font-weight: 500;
		font-style: normal;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
<style is:global>
	@media (width <= 545px) {
		#doc-content-wrapper p {
			@apply text-base;
		}
		#doc-content-wrapper .title {
			@apply text-3xl;
		}
		#doc-content-wrapper h1 {
			@apply text-2xl mb-4;
		}

		#doc-content-wrapper h2 {
			@apply text-xl mb-2;
		}

		#doc-content-wrapper h3 {
			@apply text-lg mb-2;
		}
	}

	@media (width > 545px) {
		#doc-content-wrapper p {
			@apply text-lg;
		}
		#doc-content-wrapper .title {
			@apply text-5xl;
		}
		#doc-content-wrapper h1 {
			@apply text-4xl mb-4;
		}

		#doc-content-wrapper h2 {
			@apply text-2xl mb-2;
		}

		#doc-content-wrapper h3 {
			@apply text-xl mb-2;
		}
	}

	#doc-content-wrapper a {
		@apply link link-accent;
	}

	#doc-content-wrapper em {
		@apply italic text-primary;
	}

	#doc-content-wrapper strong {
		@apply text-info;
	}

	#doc-content-wrapper ul {
		@apply m-4 ml-8;
	}

	#doc-content-wrapper li {
		@apply list-disc;
	}

	#doc-content-wrapper #badge {
		@apply badge badge-primary;
	}

	#doc-content-wrapper #badge-neutral {
		@apply badge badge-neutral;
	}
</style>
